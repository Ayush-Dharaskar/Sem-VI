<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer to give depth to the box -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape>
            <solid android:color="#000000" /> <!-- Shadow color -->
            <corners android:radius="10dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Main box (background) -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Background color (white) -->
            <corners android:radius="10dp" /> <!-- Rounded corners -->
            <stroke android:color="#BDBDBD" android:width="2dp" /> <!-- Border color and thickness -->
        </shape>
    </item>

</layer-list>
